@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employee Details";
}

<div class="card-group">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (string.IsNullOrEmpty(employee.PhotoPath) ? "2.jpg" : employee.PhotoPath);
        <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
            <div class="card-header">
                <h3> @employee.Name </h3>
            </div>
            <img class="card-img-top imageThumbnail"
             src="@photoPath" style="height:200px;"
             asp-append-version="true" />
            <div class="card-footer text-center">
                <a class="btn btn-success m-1"
               asp-controller="home"
               asp-action="details"
               asp-route-id="@employee.EncryptedId">
                    View
                </a>
                <a class="btn btn-primary m-1"
               asp-action="edit"
               asp-controller="home"
               asp-route-id="@employee.Id">
                    Edit
                </a>
                <a class="btn btn-danger m-1"
               asp-controller="home"
               asp-action="delete"
               asp-route-id="@employee.Id">
                    Delete
                </a>
            </div>
        </div>
    }
</div>