@{
    ViewBag.Title = "Error Page";
}

@if (ViewBag.ErrorTitle == null)
{
    <h3>
        An error occured while processing request.
        The Support team is notified and we are working the fix.
    </h3>
    <h5>
        Please contact us on swift@gmail.com
    </h5>
}
else
{
    <h1 class="text-danger">
        @ViewBag.ErrorTitle
    </h1>
    <h6>
        @ViewBag.ErrorMessage
    </h6>
}
